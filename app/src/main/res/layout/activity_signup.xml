<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context="com.test.ashutosh.netcamp_mainproject.Signup">
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#999"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NetCamp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textColor="#333"
        android:textStyle="italic"
        android:textSize="35dp"
        android:id="@+id/signupLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupImage"
        android:padding="5dp"
        android:src="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="10dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:id="@+id/relativeLayout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signupUsername"
        android:hint="Enter username"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_marginTop="100dp"
        android:layout_alignStart="@+id/signupPass"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/signupPass"
        android:hint="Enter password"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_below="@+id/signupUsername"
        android:layout_alignStart="@+id/signupCnfPass"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/signupCnfPass"
        android:hint="Confirm password"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_below="@+id/signupPass"
        android:layout_alignStart="@+id/signupCity"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/signupEmail"
        android:hint="Enter e-mail Id"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_below="@+id/signupCnfPass"
        android:layout_alignStart="@+id/signupCnfPass"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signupCity"
        android:hint="Enter city"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_below="@+id/signupEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/signupPhone"
        android:hint="Enter Phone number"
        android:textSize="20dp"
        android:textColorHint="#999"
        android:layout_below="@+id/signupCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/signupButton"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/signupBack"
        android:layout_alignTop="@+id/signupButton"
        android:layout_alignParentStart="true" />
</RelativeLayout>
