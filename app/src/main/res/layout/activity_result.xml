<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.ashutosh.netcamp_mainproject.Result">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score is : "
        android:textSize="30dp"
        android:id="@+id/result"
        android:layout_above="@+id/netcamp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="125dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google.com"
        android:id="@+id/google"
        android:layout_above="@+id/facebook"
        android:layout_alignStart="@+id/facebook" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook.com"
        android:id="@+id/facebook"
        android:layout_above="@+id/menu"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main menu"
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/facebook" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Netcamp.in"
        android:id="@+id/netcamp"
        android:layout_above="@+id/google"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
